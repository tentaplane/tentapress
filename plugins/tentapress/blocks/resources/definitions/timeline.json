{
    "type": "blocks/timeline",
    "name": "Timeline",
    "description": "A chronological list of events.",
    "version": 1,
    "view": "blocks.timeline",
    "fields": [
        { "key": "title", "label": "Title", "type": "text" },
        {
            "key": "items",
            "label": "Items",
            "type": "repeater",
            "help": "Add each timeline event.",
            "columns": [
                { "key": "date", "label": "Date", "type": "text", "placeholder": "2025" },
                { "key": "title", "label": "Title", "type": "text", "placeholder": "Launch" },
                { "key": "body", "label": "Body", "type": "textarea", "rows": 3 }
            ]
        }
    ],
    "defaults": {
        "title": "Timeline",
        "items": [
            { "date": "2024", "title": "Launch", "body": "First release" },
            { "date": "2025", "title": "Scale", "body": "New features" }
        ]
    },
    "example": {
        "props": {
            "title": "Timeline",
            "items": [
                { "date": "2024", "title": "Launch", "body": "First release" },
                { "date": "2025", "title": "Scale", "body": "New features" }
            ]
        }
    }
}
