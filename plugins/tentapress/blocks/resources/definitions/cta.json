{
    "type": "blocks/cta",
    "name": "Call to Action",
    "description": "A callout section with title, body and buttons.",
    "version": 3,
    "view": "blocks.cta",
    "fields": [
        { "key": "title", "label": "Title", "type": "text" },
        { "key": "body", "label": "Body", "type": "textarea", "rows": 4 },
        {
            "key": "alignment",
            "label": "Text Alignment",
            "type": "select",
            "options": [
                { "value": "left", "label": "Left" },
                { "value": "center", "label": "Center" }
            ]
        },
        {
            "key": "background",
            "label": "Background",
            "type": "select",
            "options": [
                { "value": "white", "label": "White" },
                { "value": "muted", "label": "Muted" },
                { "value": "none", "label": "None" }
            ]
        },
        {
            "key": "actions",
            "label": "Actions",
            "type": "textarea",
            "rows": 4,
            "help": "JSON array of {label,url,style} or one per line: Label | URL | Style."
        }
    ],
    "defaults": {
        "title": "Ready to go?",
        "body": "",
        "alignment": "left",
        "background": "white",
        "actions": [
            { "label": "Contact us", "url": "#", "style": "primary" },
            { "label": "Browse docs", "url": "#", "style": "outline" }
        ]
    },
    "example": {
        "props": {
            "title": "Ready to go?",
            "body": "Add a CTA to drive action.",
            "alignment": "left",
            "background": "white",
            "actions": [
                { "label": "Contact us", "url": "#", "style": "primary" },
                { "label": "Browse docs", "url": "#", "style": "outline" }
            ]
        }
    }
}
