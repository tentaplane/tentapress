{
    "type": "blocks/cta",
    "name": "Call to Action",
    "description": "A callout section with title, body and buttons.",
    "version": 2,
    "view": "blocks.cta",
    "fields": [
        { "key": "title", "label": "Title", "type": "text" },
        { "key": "body", "label": "Body", "type": "textarea", "rows": 4 },
        {
            "key": "alignment",
            "label": "Text Alignment",
            "type": "select",
            "options": [
                { "value": "left", "label": "Left" },
                { "value": "center", "label": "Center" }
            ]
        },
        {
            "key": "background",
            "label": "Background",
            "type": "select",
            "options": [
                { "value": "white", "label": "White" },
                { "value": "muted", "label": "Muted" },
                { "value": "none", "label": "None" }
            ]
        },
        { "key": "button.label", "label": "Button Label", "type": "text" },
        { "key": "button.url", "label": "Button URL", "type": "text" },
        {
            "key": "button.style",
            "label": "Button Style",
            "type": "select",
            "options": [
                { "value": "primary", "label": "Primary" },
                { "value": "outline", "label": "Outline" },
                { "value": "ghost", "label": "Ghost" }
            ]
        },
        { "key": "secondary_button.label", "label": "Secondary Button Label", "type": "text" },
        { "key": "secondary_button.url", "label": "Secondary Button URL", "type": "text" }
    ],
    "defaults": {
        "title": "Ready to go?",
        "body": "",
        "alignment": "left",
        "background": "white",
        "button": { "label": "Contact us", "url": "#", "style": "primary" },
        "secondary_button": { "label": "", "url": "" }
    },
    "example": {
        "props": {
            "title": "Ready to go?",
            "body": "Add a CTA to drive action.",
            "alignment": "left",
            "background": "white",
            "button": { "label": "Contact us", "url": "#", "style": "primary" },
            "secondary_button": { "label": "Browse docs", "url": "#" }
        }
    }
}
