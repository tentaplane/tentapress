{
    "type": "blocks/newsletter",
    "name": "Newsletter",
    "description": "A simple newsletter signup form.",
    "version": 2,
    "view": "blocks.newsletter",
    "fields": [
        { "key": "title", "label": "Title", "type": "text" },
        { "key": "body", "label": "Body", "type": "textarea", "rows": 3 },
        {
            "key": "actions",
            "label": "Actions",
            "type": "repeater",
            "help": "Add newsletter actions.",
            "columns": [
                { "key": "label", "label": "Label", "type": "text", "placeholder": "Subscribe" },
                { "key": "url", "label": "URL", "type": "text", "placeholder": "/newsletter/subscribe" },
                {
                    "key": "style",
                    "label": "Style",
                    "type": "select",
                    "options": [
                        { "value": "primary", "label": "Primary" },
                        { "value": "outline", "label": "Outline" },
                        { "value": "ghost", "label": "Ghost" }
                    ]
                }
            ]
        },
        { "key": "email_placeholder", "label": "Email Placeholder", "type": "text" },
        { "key": "disclaimer", "label": "Disclaimer", "type": "textarea", "rows": 2 },
        {
            "key": "alignment",
            "label": "Alignment",
            "type": "select",
            "options": [
                { "value": "left", "label": "Left" },
                { "value": "center", "label": "Center" }
            ]
        }
    ],
    "defaults": {
        "title": "Stay in the loop",
        "body": "",
        "actions": [
            { "label": "Subscribe", "url": "#", "style": "primary" }
        ],
        "email_placeholder": "you@example.com",
        "disclaimer": "",
        "alignment": "left"
    },
    "example": {
        "props": {
            "title": "Stay in the loop",
            "body": "Monthly updates, no spam.",
            "actions": [
                { "label": "Subscribe", "url": "#", "style": "primary" }
            ],
            "email_placeholder": "you@example.com",
            "disclaimer": "",
            "alignment": "left"
        }
    }
}
