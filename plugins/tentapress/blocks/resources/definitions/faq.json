{
    "type": "blocks/faq",
    "name": "FAQ",
    "description": "A list of frequently asked questions.",
    "version": 1,
    "view": "blocks.faq",
    "fields": [
        { "key": "title", "label": "Title", "type": "text" },
        { "key": "subtitle", "label": "Subtitle", "type": "textarea", "rows": 3 },
        {
            "key": "items",
            "label": "Questions",
            "type": "repeater",
            "help": "Add each question and answer.",
            "columns": [
                { "key": "question", "label": "Question", "type": "text" },
                { "key": "answer", "label": "Answer", "type": "textarea", "rows": 3 }
            ]
        },
        { "key": "open_first", "label": "Open first question", "type": "toggle" }
    ],
    "defaults": {
        "title": "FAQs",
        "subtitle": "",
        "items": [
            { "question": "Is it open source?", "answer": "Yes." },
            { "question": "Can I add plugins?", "answer": "Absolutely." }
        ],
        "open_first": false
    },
    "example": {
        "props": {
            "title": "FAQs",
            "subtitle": "",
            "items": [
                { "question": "Is it open source?", "answer": "Yes." },
                { "question": "Can I add plugins?", "answer": "Absolutely." }
            ],
            "open_first": true
        }
    }
}
