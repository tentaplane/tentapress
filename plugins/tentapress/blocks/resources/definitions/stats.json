{
    "type": "blocks/stats",
    "name": "Stats",
    "description": "A row of key numbers.",
    "version": 1,
    "view": "blocks.stats",
    "fields": [
        { "key": "title", "label": "Title", "type": "text" },
        {
            "key": "items",
            "label": "Items",
            "type": "repeater",
            "help": "Add each stat row.",
            "columns": [
                { "key": "value", "label": "Value", "type": "text", "placeholder": "10×" },
                { "key": "label", "label": "Label", "type": "text", "placeholder": "Faster publishing" }
            ]
        },
        {
            "key": "columns",
            "label": "Columns",
            "type": "select",
            "options": [
                { "value": "2", "label": "2" },
                { "value": "3", "label": "3" },
                { "value": "4", "label": "4" }
            ]
        },
        { "key": "dividers", "label": "Show dividers", "type": "toggle" }
    ],
    "defaults": {
        "title": "",
        "items": [
            { "value": "10k+", "label": "Monthly visitors" },
            { "value": "120", "label": "Pages shipped" },
            { "value": "4.9★", "label": "Avg rating" }
        ],
        "columns": "3",
        "dividers": false
    },
    "example": {
        "props": {
            "title": "By the numbers",
            "items": [
                { "value": "10k+", "label": "Monthly visitors" },
                { "value": "120", "label": "Pages shipped" },
                { "value": "4.9★", "label": "Avg rating" }
            ],
            "columns": "3",
            "dividers": true
        }
    }
}
